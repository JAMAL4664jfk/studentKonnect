# Wallet API Configuration Example
# Copy this to .env and fill in your actual values

# Wallet API Base URL (must end with /)
EXPO_PUBLIC_WALLET_API_URL=https://your-wallet-api-url.com/

# Wallet API Client Credentials
EXPO_PUBLIC_WALLET_CLIENT_KEY=your-client-key-here
EXPO_PUBLIC_WALLET_CLIENT_PASS=your-client-pass-here

# Feature Flag: Enable Wallet API Integration
# Set to 'true' to use real Wallet API, 'false' to use Supabase/mock data
EXPO_PUBLIC_USE_WALLET_API=false

